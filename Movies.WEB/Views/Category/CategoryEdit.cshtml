@model CategoryToUpdateDto
<form asp-action="CategoryEdit">
    <div class="container border p-3">
        <input asp-for="CategoryId" hidden />

        <h1 class="text-primary">Edit Category</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br /><br />

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Save" class="btn btn-success form-control" />
            </div>
         
        </div>
    </div>
</form>