@model ReviewToUpdate
<form asp-action="ReviewEdit">
    <input asp-for="MovieId" hidden />
    <div class="container border p-3">
        <h1 class="text-primary">Edit Review</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="ReviewText" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                @*<input asp-for="ReviewText" class="form-control" />*@
                @Html.TextAreaFor(m => m.ReviewText, new { @class = "form-control"})
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>

            <span class="text-danger pb-3">@ViewBag.Error</span>

            <div class="col-5 offset-2">
                <a asp-action="Details" asp-controller="Home" asp-route-movieId="@Model.MovieId" class="btn-primary btn form-control">Back To Details</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Edit" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>