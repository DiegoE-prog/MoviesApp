@{
    ViewData["Title"] = "Movie Delete";
}
@model MovieDto

<form asp-action="MovieDelete">
    <input asp-for="MovieId" hidden />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Movie</h1>
        <hr />
        <div class="row">
            <div class="col-4">
                <label asp-for="Title" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="Title" class="form-control" disabled/>
            </div>

            <div class="col-4">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                <textarea asp-for="Description" class="form-control" disabled></textarea>
            </div>

            <div class="col-4">
                <label asp-for="ReleaseDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="ReleaseDate" class="form-control" disabled />
            </div>

            <div class="col-4">
                <label asp-for="PosterUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="PosterUrl" class="form-control" disabled />
            </div>

            <div class="col-4">
                <label asp-for="CategoryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                @Html.DropDownListFor(m => m.CategoryId,
                (IEnumerable<SelectListItem>) ViewBag.Categories,
                "Select Category",
                new { @class = "form-control", @disabled = ""})
            </div>

            <span class="text-danger pb-3">@ViewBag.Error</span>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>