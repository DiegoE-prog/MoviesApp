@{
    ViewData["Title"] = "Movie Create";
}

@model MovieToCreateDto

<form asp-action="MovieCreate">
    <div class="container border p-3">
        <h1 class="text-primary">Create Movie</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-4">
                <label asp-for="Title" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="col-4">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
             </div>          

            <div class="col-4">
                <label asp-for="ReleaseDate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>

            <div class="col-4">
                <label asp-for="PosterUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                <input asp-for="PosterUrl" class="form-control" />
                <span asp-validation-for="PosterUrl" class="text-danger"></span>
            </div>

            <div class="col-4">
                <label asp-for="CategoryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-8 pb-3">
                @Html.DropDownListFor(m => m.CategoryId,
                    (IEnumerable<SelectListItem>) ViewBag.Categories,
                    "Select Category",
                    new { @class = "form-control" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="text-danger pb-3">
                <span>@ViewBag.Error</span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Save" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>