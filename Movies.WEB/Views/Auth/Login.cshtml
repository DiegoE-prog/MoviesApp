@{
    ViewData["Title"] = "Login";
}
@model UserDto
<form asp-action="Login">
    <div class="container container border p-3">
        <h1 class="text-primary">Login</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Username" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Password" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="text-danger pb-3">
                <span>@ViewBag.Error</span>
            </div>
            
            <div class="col-5 offset-3 pb-3 ">
                <input type="submit" value="Login" class="btn btn-primary form-control" />
            </div>

            <div class="col-5 offset-5 pb-3" >
                <a asp-action="Register" class="h6 text-primary">Register Here</a>
            </div>
        </div>
    </div>
</form>
